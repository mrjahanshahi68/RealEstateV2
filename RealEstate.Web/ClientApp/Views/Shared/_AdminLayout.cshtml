@{ 
	Layout = "~/ClientApp/Views/Shared/_BaseLayout.cshtml";
}

@section head{
@*<link href="~/ClientApp/Contents/bootstrap.css" rel="stylesheet" />*@


}
<style>
	html,body{
		direction:rtl;
		font-family:iranyekan;
	}
	h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
		font-family: iranyekan;
	}
	nav {
		height: 50px;
		background-color: #f5f5f5;
		border-bottom: 1px solid #ddd
	}
	aside {
		position: fixed;
		top: 50px;
		bottom: 20px;
		width: 300px;
		right: 0;
		background-color: #fff;
		border-left: 1px solid #ddd;
	}
	main {
		position: fixed;
		left: 0;
		right: 300px;
		bottom: 20px;
		top: 50px;
		overflow: auto;
	}
	footer {
		position: fixed;
		bottom: 0;
		height: 20px;
		left: 0;
		right: 0;
		background-color: #2b2c33;
	}
	.app-link {
		display: inline-block;
		padding: 6px 20px;
		text-decoration: none !important;
	}
	.app-logo {
		width: 60px;
		height: auto;
	}
	.app-title {
		display: inline-block;
		font-size: 21px;
		font-family: iranyekan;
		color: #444;
	}
	.account-info {
		display: inline-block;
		float: left;
		padding-left: 11px;
	}

		.account-info ul li {
			display: inline-block;
		}

		.account-info ul {
			list-style: none;
			font-family: iranyekan;
			margin: 0;
			padding: 0;
		}


			.account-info ul li > a, .account-info ul li > span {
				display: inline-block;
				padding: 15px 16px;
			}

	.sidebar-menu {
		position: relative;
	}
        .sidebar-menu .menu-header {
            padding: 10px;
            background-color: #656a84;
            margin: 3px;
            border-radius: 4px;
            font-family: iranyekan;
            color: #d3d4dc;
        }
		.sidebar-menu ul {
			list-style: none;
			margin: 0;
			padding: 0;
			font-family: iranyekan;
		}

			.sidebar-menu ul li {
				margin: 3px 6px;
			}

                .sidebar-menu ul li > a {
                    display: block;
                    padding: 10px 20px;
                    text-decoration: none;
                    color: #d2d9fdd4;
                    background-color: #656a84;
                    cursor: pointer;
                    border-radius: 4px;
                }
					.sidebar-menu ul li > a > i{
						padding-left:6px;
					}
					.sidebar-menu ul li > a:hover {
						background-color: #3e4150;
						color: #eff1ff;
						transition: background-color linear .5s,color linear .5s;
					}

					.page-title{

					}
						.page-title h3 {
							font-family: iranyekan;
							color: #a2a2a2;
							font-weight: 400;
							margin: 0;
							padding: 10px 15px;
						}
	.panel {
		margin: 5px;
		background-color: #ffffff;
		border: 2px solid transparent;
		border-radius: 4px;
		-webkit-box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05);
		box-shadow: 0px 0px 1px 1px rgba(0, 0, 0, 0.15);
	}
.test3 {}
.test4 {}

.test {}
.test2 {}

.panel-default {
     border-color: transparent; 
}
        
.panel-heading {
    padding: 10px 15px;
    border-top: 1px solid transparent;
    border-radius: 3px;
    font-family: iranyekan;
}
.panel-heading .title {
    font-size: 16px;
}
.panel-default > .panel-heading {
    color: #d1d3de;
    background-color: #656a84;
    border-color: rgba(102, 107, 133, 0.82);
}

.modal{
	overflow-y:auto;
}
	.grid-toolbar {
		margin-bottom: 5px;
	}

	.col-xs-1, .col-xs-2, .col-xs-3, .col-xs-4, .col-xs-5, .col-xs-6, .col-xs-7, .col-xs-8, .col-xs-9, .col-xs-10, .col-xs-11 {
		float: right;
	}
</style>
<nav>
	<a class="app-link">
		<img class="app-logo" src="~/ClientApp/Contents/Images/logo.png" />
		<span class="app-title">@AppTitle</span>
	</a>
	<div class="account-info">
		<ul>
			<li>
				<span>محمد جهانشاهی خوش آمدید</span>
			</li>
			<li>
				<a>
					<i class="fa fa-sign-out"></i>
				</a>
			</li>
		</ul>
		
	</div>
</nav>
<aside>
	<div class="sidebar-menu">
        <div class="menu-header">
            <span>فهرست</span>
        </div>
		<ul>
			<li>
				<a>
					<i class="fa fa-building" aria-hidden="true"></i>مدیریت ملک
				</a>
			</li>
			<li>
				<a>
					<i class="fa fa-inbox" aria-hidden="true"></i>ملک های سپرده شده
				</a>
			</li>
			<li>
				<a>
					<i class="fa fa-upload" aria-hidden="true"></i>متقاضیان ملک
				</a>
			</li>
			<li>
				<a>
					<i class="fa fa-wrench" aria-hidden="true"></i> مدیریت نوع ملک
				</a>
			</li>
			<li>
				<a>
					<i class="fa fa-coffee" aria-hidden="true"></i>	 مدیریت امکانات رفاهی
				</a>
			</li>
			<li>
				<a>
					<i class="fa fa-map" aria-hidden="true"></i>	 موقیعت های مکانی
				</a>
			</li>
			<li>
				<a href="/account">
					<i class="fa fa-user" aria-hidden="true"></i>مدیریت کاربران
				</a>
			</li>
			<li>
				<a>
					<i class="fa fa-lock" aria-hidden="true" ></i>تغییر پسورد
				</a>
			</li>
		</ul>
	</div>
	
</aside>
<main>
	<div class="container-fluid">
		<div class="page-title">
			@RenderSection("pageTitle",required:false)
		</div>
		@RenderBody()
	</div>

</main>

<footer>

</footer>
@section scripts{	
@*<script src="~/ClientApp/Scripts/bootstrap.min.js"></script>*@

<script>
	NProgress.start();
	$(document).ready(function () {
		NProgress.done();
	})
</script>
}